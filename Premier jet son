import pygame, sys
from pygame.locals import *

pygame.init()
pygame.font.init()
font = pygame.font.SysFont('Arial', 12)




display = pygame.display.set_mode((400, 600))
pygame.display.set_caption('KeyBand') #LEO IMAGE
white = (255, 255, 255)

while True: 
    #Background
    display.fill((white))
    
 
    pygame.display.update()
    
    
    for event in pygame.event.get():
        if event.type == QUIT:
            pygame.quit()
            sys.exit()

            if event.key == pygame.K_w:
            #snare
                snare = pygame.mixer.Sound('LB Snare (3).wav')
                snare.set_volume(1)
                snare.play
                
            if event.key == pygame.K_a:
            #clap
                clap = pygame.mixer.Sound('LB Clap (4).wav')
                clap.set_volume(1)
                clap.play
                

            if event.key == pygame.K_d:
            #hat
                Hat = pygame.mixer.Sound('LB Hi-Hat (1).wav')
                Hat.set_volume(1)
                Hat.play
                
            if event.key == pygame.K_q:
            #kick
                Kick = pygame.mixer.Sound('LB Kick (3).wav')
                Kick.set_volume(1)
                Kick.play

                
            #Tout arrÃªter:
            if event.key == pygame.K_1:
                pygame.mixer.stop()
            if event.key == pygame.K_0:
                pygame.mixer.pause()
            if event.key == pygame.K_9:
                pygame.mixer.unpause()
